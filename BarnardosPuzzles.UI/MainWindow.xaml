<Window x:Class="BarnardosPuzzles.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen" 
        Title="Barnardos Puzzles - Main Menu" Height="220" Width="400">
    <StackPanel>
        <TextBlock Text="Main Menu" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" />
        <Button x:Name="LinkedListButton" Content="Linked List" Click="LinkedListButtonClick" Width="120" Margin="10" />
        <Button x:Name="ReverseWordButton" Content="Reverse Word" Click="ReverseWordButtonClick" Width="120" Margin="10" />
        <Button x:Name="TriangleButton" Content="Triangle" Click="TriangleButtonClick" Width="120" Margin="10"/>
    </StackPanel>
</Window>
